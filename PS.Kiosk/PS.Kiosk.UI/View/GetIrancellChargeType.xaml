            <ColumnDefinition Width="38*" />
            <ColumnDefinition Width="54*" />
            <ColumnDefinition Width="12*" />
            <ColumnDefinition Width="54*" />
            <ColumnDefinition Width="86*" />
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="..\Resources\Irancell - Sharj.jpg" Stretch="Fill" TileMode="None" />
        </Grid.Background>
        
        <Button Content="" Grid.Column="5" Grid.Row="3" HorizontalAlignment="Stretch" Name="btnIrancell1000" VerticalAlignment="Stretch" Click="btnIrancell1000_Click" >
