                <SolidColorBrush />
            </Button.BorderBrush>
            <Button.Background>
                <SolidColorBrush />
            </Button.Background>
            <Button.Foreground>
                <SolidColorBrush />
            </Button.Foreground>
        </Button>

        <Button Content="" Grid.Column="3" Grid.Row="5" HorizontalAlignment="Stretch" Name="btnIrancell10000" VerticalAlignment="Stretch" Click="btnIrancell10000_Click" >
            <Button.BorderBrush>
                <SolidColorBrush />
            </Button.BorderBrush>
            <Button.Background>
                <SolidColorBrush />
