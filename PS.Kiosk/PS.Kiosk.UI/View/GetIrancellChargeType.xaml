            </Button.Background>
            <Button.Foreground>
                <SolidColorBrush />
            </Button.Foreground>
        </Button>
        <Button Content="" Grid.Column="3" Grid.Row="3" HorizontalAlignment="Stretch" Name="btnIrancell5000" VerticalAlignment="Stretch" Click="btnIrancell5000_Click">
